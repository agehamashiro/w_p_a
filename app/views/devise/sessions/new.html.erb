<!-- app/views/devise/sessions/new.html.erb -->

<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <title>ログイン - WinePairing</title>
  <link href="https://fonts.googleapis.com/css2?family=Kaisei+Decol&display=swap" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  <style>
    body {
      font-family: 'Kaisei Decol', serif;
    }
    label {
      font-size: clamp(12px, 1.5vw, 24px);
      display: block;
    }
    input {
      width: 100%;
      border: 1px solid #ccc;
      border-radius: 6px;
      padding: 10px;
      font-size: 1rem;
    }
  </style>
</head>
<body class="min-h-screen bg-gray-50 flex justify-center pt-0 px-0">

  <div class="mx-auto w-full max-w-xl bg-white border-4 border-[#800020] rounded-none shadow-2xl px-4 sm:px-10 md:px-16 lg:px-20 py-10 sm:py-14 md:py-16 text-center space-y-10">

    <h1 class="text-5xl text-gray-800 tracking-wide">ログイン</h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="space-y-6 text-gray-700 text-left">

        <div>
          <%= f.label :email, "メールアドレス", class: "mb-2 text-xl" %>
          <%= f.email_field :email, autofocus: true, class: "w-full border border-gray-300 rounded-md p-3" %>
        </div>

        <div>
          <%= f.label :password, "パスワード", class: "mb-2 text-xl" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "w-full border border-gray-300 rounded-md p-3" %>
        </div>

        <div>
          <%= f.submit "ログイン", class: "bg-[#800020] hover:bg-red-800 text-white font-semibold py-3 px-8 rounded-full shadow-md transition" %>
        </div>

        <div class="text-center mt-4">
         <%= link_to "Googleでログイン", user_google_oauth2_omniauth_authorize_path,
            class: "bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded shadow transition" %>
        </div>

      </div>
    <% end %>

    <div class="text-center text-sm text-[#800020]">
      <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name), class: "hover:underline" %>
    </div>

  </div>

</body>
</html>
