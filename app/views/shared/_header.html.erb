<header class="fixed top-0 left-0 z-50 w-full bg-white shadow">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <%= link_to "WinePairing", root_path, class: "text-xl font-bold text-[#800020] font-kaisei" %>

      <button id="menu-button" class="md:hidden text-gray-700 hover:text-red-500 focus:outline-none">
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>

      <nav class="hidden md:flex space-x-4">
      <% if user_signed_in? %>
        <%= link_to "マイページ", mypage_path, class: "text-gray-700 hover:text-red-500" %>
        <%= link_to "ログアウト", logout_path, method: :delete, class: "text-gray-700 hover:text-red-500" %>
      <% else %>
        <%= link_to "ログイン", login_path, class: "text-gray-700 hover:text-red-500" %>
        <%= link_to "新規登録", signup_path, class: "text-gray-700 hover:text-red-500" %>
      <% end %>
    </nav>
    
    <div id="mobile-menu" class="md:hidden hidden mt-2 space-y-2">
      <% if user_signed_in? %>
        <%= link_to "マイページ", mypage_path, class: "block text-gray-700 hover:text-red-500" %>
        <%= link_to "ログアウト", logout_path, method: :delete, class: "block text-gray-700 hover:text-red-500" %>
      <% else %>
        <%= link_to "ログイン", login_path, class: "block text-gray-700 hover:text-red-500" %>
        <%= link_to "新規登録", signup_path, class: "block text-gray-700 hover:text-red-500" %>
      <% end %>
    </div>
  </div>
</header>
